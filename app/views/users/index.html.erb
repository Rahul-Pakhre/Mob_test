<%= form_tag users_path, :method => 'get', :id => "users_search" do %>
  <p>
     <h4>Please type username to search!</h4>
    <%= text_field_tag :search %>
    <%= submit_tag "Search", :name => nil %>
  </p>
   
<% end %>

<h1>All user's list</h1>
<% @users.each do |user| %>
<h4>Email: <%= user.email %></br></h4>
<h4>Username: <%= user.username %> </br></h4>
<h4>Date Of Birth: <%= user.dob %></br></h4>

<% if (current_user.is_admin == true)%>
 <h4><%= link_to "Edit User" ,edit_user_path(user)%> </h4>
 <h4><%= link_to 'Delete User', user_path(user),
                    method: :delete, data: { confirm: 'Are you sure?' } %></h4>

<% end %>
   <p><%= link_to 'Home Page', user_path(user) %></p>    
<%end%>
<p><%= link_to "Logout" , logout_url%> </p>

